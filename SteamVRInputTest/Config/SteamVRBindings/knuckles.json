{
	"name": "Default bindings for Index Controllers",
	"controller_type": "knuckles",
	"bindings":
	{
		"/actions/main":
		{
			"sources": [
				{
					"mode": "button",
					"path": "/user/hand/left/input/trackpad",
					"inputs":
					{
						"click":
						{
							"output": "/actions/main/in/MakeMyGuyJump"
						}
					}
				},
				{
					"mode": "dpad",
					"path": "/user/hand/left/input/trackpad",
					"parameters":
					{
						"sub_mode": "click"
					},
					"inputs":
					{
						"south":
						{
							"output": "/actions/main/in/MoveMyGuyDown"
						}
					}
				},
				{
					"mode": "dpad",
					"path": "/user/hand/left/input/trackpad",
					"parameters":
					{
						"sub_mode": "click"
					},
					"inputs":
					{
						"west":
						{
							"output": "/actions/main/in/MoveMyGuyLeft"
						}
					}
				},
				{
					"mode": "button",
					"path": "/user/hand/left/input/grip",
					"inputs":
					{
						"click":
						{
							"output": "/actions/main/in/ResetVR"
						}
					}
				},
				{
					"mode": "trigger",
					"path": "/user/hand/right/input/trigger",
					"inputs":
					{
						"click":
						{
							"output": "/actions/main/in/SetDestination"
						}
					}
				}
			],
			"poses": [
				{
					"output": "/actions/main/in/controllerleft",
					"path": "/user/hand/left/pose/raw",
					"requirement": "optional"
				},
				{
					"output": "/actions/main/in/controllerright",
					"path": "/user/hand/right/pose/raw"
				}
			],
			"skeleton": [
				{
					"output": "/actions/main/in/skeletonleft",
					"path": "/user/hand/left/input/skeleton/left"
				},
				{
					"output": "/actions/main/in/skeletonright",
					"path": "/user/hand/right/input/skeleton/right"
				}
			],
			"haptics": [
				{
					"output": "/actions/main/out/vibrateleft",
					"path": "/user/hand/left/output/haptic"
				},
				{
					"output": "/actions/main/out/vibrateright",
					"path": "/user/hand/right/output/haptic"
				}
			]
		}
	},
	"description": "Top Down Game Template"
}